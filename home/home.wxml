<loading hidden="{{hidden}}"></loading>
<view class='topGuideWrap' bindtap='showAddDetail' wx:if="{{isShowAddToMy}}">
  <image class='leftIcon' src='https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1566875218703/hosIcon.png'></image>
  <view class='centerText'>
    <view class='top'>添加到我的小程序</view>
    <view class='bot'>
      <view class='info'>问诊更方便</view>
      <image class='down' src='https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1561614279156/down.png'></image>
    </view>
  </view>
</view>
<view class='guideModal' wx:if='{{detailModal}}'>
  <view class='guideModalBg'></view>
  <view class='guideContent'>
    <image class='hand' src='https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1561620468345/hand.png'></image>
    <view class='bigInfo'>添加到我的小程序</view>
    <view class='secInfo'>问诊更方便</view>
    <view class='infoItem'>
      <view class='numWrap'>1</view>
      <view class='info'>点击右上角</view>
      <image class='icon' src='https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1561618965429/lefticon.png'></image>
    </view>
    <view class='infoItem'>
      <view class='numWrap'>2</view>
      <view class='info'>选择“添加到我的小程序”</view>
    </view>
    <view class='infoItem'>
      <view class='numWrap'>3</view>
      <view class='info'>点击右上角关闭小圆圈</view>
      <image class='icon' src='https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1561618980971/righticon.png'></image>
    </view>
    <view class='infoItem'>
      <view class='numWrap'>4</view>
      <view class='info'>回到微信下拉聊天列表</view>
    </view>
    <view class='infoItem'>
      <view class='numWrap'>5</view>
      <view class='info'>从我的小程序中打开高济互联网医院小程序</view>
    </view>
    <view class='bigImgWrap'>
      <image src="https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1566875553576/hosgif.gif"></image>
    </view>
    <view class='knowBtn' bindtap='hideAddDetail'>知道了</view>
  </view>
</view>
<view class='topPositionWrao' wx:if="{{storeAndBusinessInfo.daojiaSpecialFlag == 1}}">
  <view class='leftPos'>
    <image src='https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1563436219327/indexLoc.png' class='tag'></image>
    <text class='infoText storeText'>
      {{storeAndBusinessInfo ? storeAndBusinessInfo.businessName + storeAndBusinessInfo.storeName : '未定位'}}
    </text>
  </view>
  <view class='leftPos' bindtap='scanCode'>
    <image src='https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1563436087570/indexSao.png' class='tag'></image>
    <text class='infoText'>问诊码</text>
  </view>
</view>
<view>
  <view class="bannerWrap">
    <swiper autoplay="true" interval="3000" duration="500" indicator-dots="true" indicator-color="#fff" indicator-active-color="#449EFE">
      <block wx:for="{{imgUrls}}" wx:key="index">
        <swiper-item bindtap="goToWebView" data-swiperItem="{{item}}" autoplay>
          <!-- <swiper-item bindtap="goToWebView" data-swiperItem="{{item}}" autoplay=indicator -dots> -->
          <image src="{{item.path}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class='actionCenter'>
    <view class="bigActItem" bindtap="imgQuick">
      <image class="bigIcon" src="https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1576467476003/image.png"></image>
      <view class="bigTitle">图文问诊</view>
      <view class="bigDesc">使用文字图片与医生沟通</view>
      <authorizeView type="6" isLogin="{{isLogin}}" isMemberFlag="{{isMemberFlag}}" bind:myevent="authBack" />
    </view>
    <view class="bigActItem" bindtap="quickAction">
      <image class="bigIcon" src="https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1576477778304/video.png"></image>
      <view class="bigTitle">视频问诊</view>
      <view class="bigDesc">使用视频通话与医生沟通</view>
      <authorizeView type="1" isLogin="{{isLogin}}" isMemberFlag="{{isMemberFlag}}" bind:myevent="authBack" />
    </view>
    <view class="rightWrap">
      <view class="smallAct" bindtap="goToRecord">
        <image class="smallIcon" src="https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1576478101417/record.png"></image>
        <view class="smallTitle">问诊记录</view>
        <authorizeView type="5" isLogin="{{isLogin}}" isMemberFlag="{{isMemberFlag}}" bind:myevent="authBack" />
      </view>
      <view class="smallAct" bindtap="goToMyOrders">
        <image class="smallIcon" src="https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1576478578467/order.png"></image>
        <view class="smallTitle">我的处方</view>
        <authorizeView type="2" isLogin="{{isLogin}}" isMemberFlag="{{isMemberFlag}}" bind:myevent="authBack" />
      </view>
    </view>
  </view>
</view>
<view class="{{isShowAccount ? 'tabCenter padTabCenter' : 'tabCenter'}}">
  <view class='tabTitle'>
    <image class='titleLine' src='https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1563439741644/leftLine.png'></image>
    <text>推荐医生</text>
    <image class='titleLine' src='https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1563439791513/rightLine.png'></image>
  </view>
  <scroll-view scroll-x="true" scroll-with-animation="true" scroll-left="{{scrollLeft}}" class="navWrap">
    <view wx:for="{{laboratoryList}}" wx:key="navList" data-idx="{{index}}" data-itemid="{{item.laboratoryId}}" bindtap="changeNav" class="navItem">
      <view class="{{laboratoryId == item.laboratoryId ? 'navTitle actNavTitle' : 'navTitle'}}">
        {{item.laboratoryName}}
      </view>
      <view wx:if="{{laboratoryId == item.laboratoryId}}" class="navAction"></view>
    </view>
  </scroll-view>
  <view class='box'>
    <block wx:for="{{doctorDataList}}" wx:key="item">
      <view class='boxItem'>
        <view class='topItem' bindtap='goToDoctorDetail' data-detail="{{item}}" data-id='{{item.doctorId}}'>
          <image class='doctorHead' src='{{item.headUrl}}'></image>
          <view class='topInfo'>
            <view class='topText'>
              <text class='leftText'>{{item.realName}}</text>
              <text class="rightText">{{item.title || ''}}</text>
              <!-- 主诊医生 -->
              <image wx:if="{{item.mainDoctorFlag == 1}}" class="icon" src="https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1591422233615/mainDoctor.png"></image>
              <!-- 预约问诊 -->
              <image wx:if="{{item.tag == 1 || item.tag == 3}}" class="icon" src="https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1585032135862/orderIcon.png"></image>
              <!-- 瑞澄义诊 -->
              <image wx:if="{{item.laboratoryId == 9}}" class="icon" src="https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1585032080795/freeIcon.png"></image>
            </view>
            <view class='botText'>
              <text class='leftText'>{{item.hospitalName}}</text>
              <text>
                {{item.showFirstLaboratory ? item.firstPractiseLaboratory : item.laboratory}}
              </text>
            </view>
            <view class="goodAt">擅长：{{item.skills || '暂无信息'}}</view>
            <view class="typeWrap">
              <view class="{{item.latestStatus == 0 ? 'typeItem imgItem disTypeItem' : 'typeItem imgItem'}}" wx:if="{{item.doctorServiceIds.length > 1 || item.doctorServiceIds[0] == 1}}">
                <image src="{{item.latestStatus == 0 ? 'https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1576498138384/imgGrey.png' : 'https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1576498119430/img.png'}}" class="icon imgIcon"></image>
                <text class="typeText">图文问诊</text>
              </view>
              <view class="{{item.latestStatus == 0 ? 'typeItem videoItem disTypeItem' : 'typeItem videoItem'}}" wx:if="{{item.doctorServiceIds.length > 1 || item.doctorServiceIds[0] == 2}}">
                <image src="{{item.latestStatus == 0 ? 'https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1576498157744/videoGrey.png' : 'https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1576498148691/video.png'}}" class="icon videoIcon"></image>
                <text class="typeText">视频问诊</text>
              </view>
            </view>
          </view>
          <authorizeView type="3" isLogin="{{isLogin}}" isMemberFlag="{{isMemberFlag}}" bind:myevent="authBack" />
        </view>
        <view class='botItem' data-doctorInfo="{{item}}" bindtap='nowAction'>
          <text class='' wx:if="{{item.latestStatus == 0}}">医生已下线无法接诊</text>
          <text wx:else>
            {{item.doctorServiceIds[0] == 1 ? '图文问诊排队人数' : '视频问诊排队人数'}}：{{item.queueOfPersonNum}}
          </text>
          <view class='nowDisabledBtn' wx:if="{{item.latestStatus == 0}}">医生已下线</view>
          <view class='nowDisabledRedBtn' wx:elif="{{item.latestStatus == 4}}">暂停接诊</view>
          <view class="nowActionWrap" wx:else>
            <view class='nowActionBtn'>立即问诊</view>
            <authorizeView type="4" isLogin="{{isLogin}}" isMemberFlag="{{isMemberFlag}}" bind:myevent="authBack" />
          </view>
        </view>
      </view>
    </block>
  </view>
  <!-- <sticky scrollTab sync init scrollTop="{{scrollTop}}" tabList="{{navList}}">
    <block wx:for="{{navList}}" wx:key="navList">
      <sticky-item>
      </sticky-item>
    </block>
  </sticky> -->
</view>
<view class='accountWrap' wx:if="{{isShowAccount}}">
  <official-account binderror='accountErr'></official-account>
</view>
<view class="shareWrap">
  <shareBtn wx:if="{{shareConfig.showButton}}" shareConfigId="{{shareId}}" shareData="{{shareConfig}}" transactionId="" skipPath="pages/home/home" bind:setShareImg="setShareImg" />
  <authorizeView type="7" isLogin="{{isLogin}}" isMemberFlag="{{isMemberFlag}}" bind:myevent="authBack" />
</view>
<modal show="{{otherWayEnter}}" width="570rpx" maskClose="{{false}}" position="center">
  <view class='otherWayContent'>
    <image src='https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1564452659691/otherInfo.jpg' class='modalBanner'></image>
    <view class='topText'>欢迎使用高济互联网医院问诊</view>
    <view class='botText'>目前仅支持扫描药店的问诊码进入</view>
    <view class='botText'>问诊请扫描门店的问诊二维码</view>
    <!-- <view bindtap='closeOtherWayModal' class='modalBtn'>确定</view> -->
  </view>
</modal>
<modal show="{{isShowGaojiModal}}" width="620rpx" borderRadius="20rpx" bindClose="{{gaojiModalClose}}" maskClose="{{true}}" position="center">
  <view class='gaojiContent'>
    <image class="closeIcon" bindtap="gaojiModalClose" src="https://gjscrm-1256038144.cos.ap-beijing.myqcloud.com/common/1575879380653/close.png"></image>
    <view class="top">
      <view class="title">服务授权</view>
    </view>
    <view class="bot">
      <view class="bigInfo">授权高济互联网医院获取以下信息为您服务</view>
      <view class="greyInfo">· 获取你的公开信息（昵称、头像、性别等）</view>
      <view class="greyInfo">· 使用身份信息（姓名、手机号等）办理业务</view>
      <view class="infoArea">
        <switch color="#1E90E0" type="checkbox" checked="{{gaojiInfoChecked}}" bindchange="radioChange">
          <text class="agreeText">同意</text>
          <text class="infoText" data-type="1" bindtap="routerGo">《隐私协议》</text>
          <text class="agreeText">和</text>
          <text class="infoText" data-type="2" bindtap="routerGo">《用户注册协议》</text>
        </switch>
      </view>
      <button class="{{ gaojiInfoChecked ? 'agreeBtn' : 'agreeGreyBtn' }}" bindtap="agreeGaoji">
        同意授权
      </button>
    </view>
  </view>
</modal>
<modal show="{{typeModal}}" borderRadius="20rpx" width="600rpx" position="center">
  <selectInterrogationType dialogType="{{dialogType}}" bind:closeEvent="closeEvent" bind:myevent="selectTypeBack" />
</modal>
<mp-dialog title="{{dialogTitle}}" show="{{dialogShow}}" bindbuttontap="tapDialogButtons" buttons="{{dialogButtons}}"></mp-dialog>

